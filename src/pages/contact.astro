---
import BaseLayout from "../layouts/BaseLayout.astro";
---
<BaseLayout title="Contact | 이동수하우스">
  <h1 class="text-3xl font-bold">문의하기</h1>
  <form action="https://formspree.io/f/xqalvjwd" method="POST"
        class="mt-6 max-w-xl space-y-4">
    <input name="name" placeholder="이름" required
           class="w-full border rounded-xl px-4 py-3 bg-white/70 dark:bg-white/5" />
    <input name="email" type="email" placeholder="이메일" required
           class="w-full border rounded-xl px-4 py-3 bg-white/70 dark:bg-white/5" />
    <textarea name="message" rows="6" placeholder="문의 내용" required
              class="w-full border rounded-xl px-4 py-3 bg-white/70 dark:bg-white/5"></textarea>

    <!-- Honeypot -->
    <div class="hidden" aria-hidden="true">
      <label>Leave empty<input type="text" name="_hp" tabindex="-1" autocomplete="off" /></label>
    </div>

    <button type="submit" class="btn btn-primary">보내기</button>
  </form>
</BaseLayout>
